<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D3D0D0"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="#ffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_margin="5dp"
                >

                <ImageView
                    android:id="@+id/gh_anh"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/iconsp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thongtin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"

                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/gh_delete"
                android:layout_toRightOf="@+id/tt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gh_tensp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ten"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gh_gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gia"
                    android:textColor="#ff00" />

                <TextView
                    android:id="@+id/gh_soluongdoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="so luong"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageView
                android:id="@+id/gh_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24pm"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
<!--            <ImageView-->
<!--                android:id="@+id/gh_edit"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/baseline_edit_24pm"-->
<!--                android:layout_toLeftOf="@id/gh_delete"-->
<!--                android:layout_centerVertical="true"/>-->
        </RelativeLayout>



    </LinearLayout>
    </LinearLayout>

    
    


</androidx.cardview.widget.CardView>